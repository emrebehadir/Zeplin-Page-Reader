{
    "manifest_version": 2,
    "name": "Zeplin Page Reader",
    "description": "It read all zeplin page and related notes.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "credentials.js",
                "jquery.min.js",
                "common.js",
                "content.js"
            ],
            "all_frames": true,
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": [
            "credentials.js",
            "jquery.min.js",
            "common.js",
            "background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_icon": "extension-icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "extension-icon.png"
    },
    "permissions": [
        "<all_urls>",
        "activeTab",
        "identity",
        "cookies",
        "clipboardRead",
        "clipboardWrite",
        "webRequest",
        "webRequestBlocking"
    ]
}